<main id="details">
    <section id="details-info">
        {{#with item}}
        <div class="game-image">
            <img src="{{image}}">
        </div>

        <div class="game-info">
            <div class="game-text">

                <h1 id="name">{{name}}</h1>
                <h3 id="platform">Platform: {{platform}}</h3>
                <p id="price"><span>Price: ${{price}}</span></p>
                <p id="genre"><span>Genre: {{genre}}</span></p>
                <p id="description">Description:{{description}}</p>
                {{/with}}
            </div>
            <div class="product-btn">
                {{#if isOwner}}
                <!--Only for registered user and author of the publication -->
                <div class="author">
                    <a href="/details/edit/{{item._id}}" class="btn-edit">Edit</a>
                    <a href="/details/delete/{{item._id}}" class="btn-delete">Delete</a>
                </div>
                {{else}}
                {{#if isUser}}

                {{#if isBought}}

                <!-- Logged in user who has not yet buy this game code-->
                <p class="buy-message">You have already bought this game</p>
                {{else}}

                <a href="/details/{{item._id}}/buy" class="btn-buy">Buy</a>
                <!-- Logged in user who has already buy this game code-->
                {{/if}}

                {{/if}}
                {{/if}}

            </div>
        </div>
    </section>
</main>