<section class="search">
    <h1>Search</h1>

    <form class="search-form" action="/offer/search" method="GET">
        <input type="text" class="search-name" name="name" value="{{search.name}}" placeholder="Search Name...">
        <input type="text" class="search-type" name="type" value="{{search.type}}" placeholder="Search Type...">
        <button type="submit" class="btn-search">Search</button>
    </form>

    {{#if offers}}
    <div class="search-results">
        {{#each offers}}
        <div class="search-result">
            <div class="search-list">
                <a href="#" class="added-electronics-in-market">
                    <img src="{{image}}" class="picture-added-electronics" alt="{{name}}">
                    <h3>{{name}}</h3>
                    <span>Price: ${{price}}</span>
                </a>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="no-match">
        <p>No match was found!</p>
    </div>
    {{/if}}


</section>