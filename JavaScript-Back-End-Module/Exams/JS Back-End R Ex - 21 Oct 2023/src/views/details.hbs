<section id="detailsPage">
    <div id="detailsInfo">
        {{#with offer}}
        <h1>Name: {{name}}</h1>
        <div class="info"><img src="{{image}}"></div>

        <div class="info">
            <h3>Type: {{type}}</h3>
            <h3>Year of Production: {{production}}</h3>
            <h3>Years of Exploitation: {{exploitation}}</h3>
            <h3>Damages: {{damages}}</h3>
            <h3>Description: {{description}}</h3>
            <h2>Price: ${{price}}</h2>
        </div>

        {{#if isUser}}
        <div class="buttons">


            {{#if owner}}
                <a href="/offer/edit/{{_id}}" class="edit-btn">Edit</a>
                <a href="/offer/delete/{{_id}}" class="delete-btn">Delete</a>
            {{else}}
                {{#if isBought}}
                    <p><span class="buy">Thank You For Your Purchase</span></p>
                {{else}}
                    <a href="/offer/buy/{{_id}}" class="buy-btn">Buy</a>
                {{/if}}
            {{/if}}

        </div>
        {{/if}}
        {{/with}}
    </div>
</section>