<section id="edit-container">
    <div class="edit-container-info">

        <img src="/static/img/blog-img12.jpg" alt="image">

        <form action="/gallery/edit/{{body._id}}" method="POST" class="container-text">
            <h2>Edit</h2>
            <p>Edit your masterpiece!</p>

            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="{{body.title}}">

            <label for="painting-tech">Painting technique:</label>
            <input type="text" id="painting-tech" name="technique" value="{{body.technique}}">

            <label for="picture">Art picture:</label>
            <input type="text" id="picture" name="picture" value="{{body.picture}}">

            <label for="certificate">Certificate of authenticity:</label>
            <input type="text" id="certificate" name="certificate" value="{{body.certificate}}">

            <button class="edit-btn">Edit</button>
        </form>
    </div>
</section>