<section id="details-page">
    <h1>Details</h1>
    <article class="details-card">

        {{#with item}}
        <article class="details-card-text">
            <h2>Title:<br> {{title}}</h2>
            <h3>Author: {{_author.username}}</h3>
            <h3>Painting technique: {{technique}}</h3>
            <h3>Certificate of authenticity: {{certificate}}</h3>
            {{/with}}

            {{#if isUser}}
            <div class="buttons">
                {{#if isOwner}}
                <!-- Only for registered user and author of the publication -->
                <a href="/gallery/edit/{{item._id}}" class="btn-edit">Edit</a>
                <a href="/gallery/delete/{{item._id}}" class="btn-delete">Delete</a>
                {{else}}

                {{#if isShared}}
                <!-- logged in user who has already shared the publication-->
                <p class="shared-pub">You already shared this publication</p>
                {{else}}
                <!-- logged in user who has not yet shared the publication-->
                <a href="/gallery/share/{{item._id}}" class="btn-share">Share publication</a>
                {{/if}}

                {{/if}}
            </div>
            {{/if}}

        </article>

        <article class="details-card-image">
            {{!-- TODO change the src --}}
            <img src="/static/img/img-5.jpg" alt="art-image2">
        </article>

    </article>
</section>