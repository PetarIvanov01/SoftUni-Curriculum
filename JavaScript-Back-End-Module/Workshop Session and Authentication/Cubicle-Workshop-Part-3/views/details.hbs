<h1>{{cube.name}}</h1>
<img class="cube" src="{{cube.imageUrl}}">
<div class="details">
  <p><span>Description:</span>{{cube.description}}</p>
  <p><span>Difficulty level:</span> {{cube.difficulty}}</p>
  <a class="btn" href="/">Back</a>
  {{#if isOwner}}
  <a class="btn" href="/accessory/{{cube._id}}/attach">Attach</a>
  <a class="btn" href="/details/delete/{{cube._id}}">Delete</a>
  <a class="btn" href="/details/edit/{{cube._id}}">Edit</a>
  {{/if}}
</div>


<h2>Accessories</h2>
<div class="accessories">
  {{#if accessories}}
  {{#each accessories}}

  <div class="accessory">
    <img src="{{imageUrl}}" alt="{{name}}">
    <h3>{{name}}</h3>
    <p>{{description}}</p>
  </div>

  {{/each}}

  {{else}}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/if}}
</div>