<div class="container">
    <header>
        <ul>
            <li><img class="logo" src="/static/images/logo.png"></li>
            <li><a href="/">Browse</a></li>
            <li><a href="/about">About</a></li>
            {{#if isUser}}
            <li><a href="/create">Add a Cube</a></li>
            <li><a href="/accessory">Add Accessory</a></li>
            <li><a href="/logout">Logout</a></li>
            {{else}}
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Register</a></li>
            {{/if}}
        </ul>
    </header>
    <main>

        <body>
            <h1>Browser</h1>
            <form action="/search" method="GET">
                <input type="text" class="search" name="search" placeholder="Search...">
                <input type="number" name="from" class="difficulty" placeholder="Difficulty from...">
                <span>-</span>
                <input type="number" name="to" class="difficulty" placeholder="Difficulty to...">
                <input type="submit" value="search">
            </form>

            {{#if isItem}}
            {{#each items}}
            <div class="cube">
                <img class="cube" src="{{imageUrl}}">
                <p class="name">{{name}}</p>
                <p><span>Difficulty level:</span> {{difficulty}}</p>
                <a class="btn" href="/details/{{_id}}">Details</a>
            </div>
            {{/each}}
            {{else}}
            <div><strong> NO CUBES ARE FOUND!</strong> </div>
            {{/if}}

        </body>
    </main>
</div>